<script>
    // Function to show or hide the footer-top section based on the current URL
    function toggleFooterTop() {
        const footerTop = document.getElementsByClassName('footer-top')[0];
        const currentPath = window.location.pathname;

        if (currentPath === '/listings') {
            footerTop.style.display = 'block';
        } else {
            footerTop.style.display = 'none';
        }
    }

    // Call the function to set the initial state
    toggleFooterTop();

    // Optional: Listen to URL changes and toggle the footer-top section
    window.addEventListener('popstate', toggleFooterTop);
</script>